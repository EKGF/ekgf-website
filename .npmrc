# pnpm Configuration

# Auto-install peer dependencies
auto-install-peers=true

# Strict peer dependencies (recommended for production)
strict-peer-dependencies=false

# Use hoisted node_modules structure for better compatibility
# with tools that don't understand pnpm's symlink structure
shamefully-hoist=false
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=@commitlint/*

# Lockfile settings
# Don't update lockfile unless explicitly requested
lockfile=true

# Engine strict mode
# Requires Node.js version to match package.json engines field
engine-strict=false

# Save exact versions (no ^ or ~)
# Uncomment for stricter version control
# save-exact=true

# Link workspace packages (for monorepo)
link-workspace-packages=true

# Prefer workspace packages over registry versions
prefer-workspace-packages=true
